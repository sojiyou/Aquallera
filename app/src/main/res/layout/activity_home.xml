<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_bg">

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Logo and Tagline -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginBottom="30dp">

                <!-- Logo -->
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/aqua_llera_logo"
                    android:contentDescription="@string/appLogoDesc"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tagline"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:textColor="#666666"
                    android:textAlignment="center"/>
            </LinearLayout>

            <!-- Why Make Aqua-llera -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/whyMakeAquallera"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#3E5171"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="@string/whyMakeAqualleraDesc"
                android:textSize="14sp"
                android:textColor="#F4E7BB"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="30dp"
                android:padding="10dp"
                android:background="@drawable/text_card_background"/>

            <!-- What is the Aqua-llera App? -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/WhatIsAquallera"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#3E5171"
                android:gravity="end"
                android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:gravity="end"
                    android:lineSpacingExtra="4dp"
                    android:text="@string/WhatIsAqualleraDesc"
                    android:textColor="#F4E7BB"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:background="@drawable/text_card_background"/>

            <LinearLayout
                android:id="@+id/LocateStations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:padding="20dp"
                android:layout_marginBottom="30dp"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Let's start Locating"
                    android:textSize="12sp"
                    android:textColor="#205476"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Water Stations!"
                    android:textSize="12sp"
                    android:textColor="#205476"
                    android:textAlignment="center"
                    android:textStyle="bold|italic"
                    android:layout_marginRight="2dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <include
        layout="@layout/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>