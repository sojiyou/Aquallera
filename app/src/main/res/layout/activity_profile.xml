<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_bg">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="20dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/aqua_llera_logo"
            android:contentDescription="@string/appLogoDesc"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tagline"
            android:textSize="14sp"
            android:textStyle="italic"
            android:textColor="#666666"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Profile"
            android:textSize="14sp"
            android:textColor="@color/somewhat_blue"
            android:textStyle="bold|italic"
            android:layout_marginBottom="3dp"/>

        <View
            android:layout_width="90dp"
            android:layout_height="2dp"
            android:background="@color/somewhat_blue"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

    <!-- Profile Form -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/order_ticket_background"
        android:padding="20dp"
        android:layout_margin="10dp"
        android:layout_marginBottom="30dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/ivProfileImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icons8_user_50"
                android:scaleType="centerCrop"
                android:layout_marginBottom="15dp"/>

            <!-- Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/another_yellow"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Juan A. Tamad"
                    android:textSize="16dp"
                    android:textColor="@color/another_yellow"
                    android:paddingStart="8dp"/>

            </LinearLayout>

            <!-- Email -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/another_yellow"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:id="@+id/tvUserEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="juantamad@gmail.com"
                    android:textSize="16dp"
                    android:textColor="@color/another_yellow"
                    android:paddingStart="8dp"/>

            </LinearLayout>

            <!-- Number -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/another_yellow"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:id="@+id/tvUserNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09277263218"
                    android:textSize="16dp"
                    android:textColor="@color/another_yellow"
                    android:paddingStart="8dp"/>

            </LinearLayout>

            <!-- Edit Profile Button -->
            <Button
                android:id="@+id/btnEditProfile"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:text="Edit Profile"
                android:textSize="16sp"
                android:textColor="@color/somewhat_blue"
                android:background="@drawable/button_background2"
                android:layout_marginBottom="15dp" />

            <!-- Log Out Button -->
            <Button
                android:id="@+id/btnLogOut"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:text="Log Out"
                android:textSize="16sp"
                android:textColor="@color/somewhat_blue"
                android:background="@drawable/button_background2"
                android:layout_marginBottom="15dp" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <!-- Order Now Button -->
        <Button
            android:id="@+id/btnMaps"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="Maps"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@drawable/button_background"
            android:layout_marginBottom="15dp" />

        <View
            android:layout_width="50dp"
            android:layout_height="1dp"/>

        <!-- See List Button -->
        <Button
            android:id="@+id/btnSeeList"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="See List"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@drawable/button_background"
            android:layout_marginBottom="20dp" />

    </LinearLayout>

    <!-- Bottom Navigation -->
    <include
        layout="@layout/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>