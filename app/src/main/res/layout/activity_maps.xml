<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_bg">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/aqua_llera_logo"
            android:contentDescription="@string/appLogoDesc"/>

    </LinearLayout>

    <!-- Map Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/order_ticket_background"
        android:padding="20dp"
        android:layout_margin="10dp"
        android:layout_marginBottom="30dp">

        <!-- MapBox MapView -->
        <com.mapbox.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_weight="1" />

        <!-- Water Station Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/waterStationName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Living Water Refilling Station"
                android:textColor="@color/another_yellow"
                android:textSize="18sp"
                android:maxLines="2"
                android:ellipsize="end"/>

            <Button
                android:id="@+id/viewDetailsBtn"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/button_background2"
                android:text="Details"
                android:textColor="@color/somewhat_blue"
                android:textSize="14sp"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

    </LinearLayout>

    <!-- Bottom Navigation -->
    <include
        layout="@layout/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>