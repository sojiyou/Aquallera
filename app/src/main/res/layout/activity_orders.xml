<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_bg">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="20dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/aqua_llera_logo"
            android:contentDescription="@string/appLogoDesc"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tagline"
            android:textSize="14sp"
            android:textStyle="italic"
            android:textColor="#666666"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Orders"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#3E5171"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/somewhat_blue"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

    <!-- Order List Container -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/order_list_background"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/ordersContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Add Order Tickets Here -->
            <include layout="@layout/order_ticket_item"/>
            <include layout="@layout/order_ticket_item"/>
            <include layout="@layout/order_ticket_item"/>


        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <include
        layout="@layout/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>