<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_bg">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="20dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/aqua_llera_logo"
            android:contentDescription="@string/appLogoDesc"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tagline"
            android:textSize="14sp"
            android:textStyle="italic"
            android:textColor="#666666"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit User Profile"
            android:textSize="14sp"
            android:textColor="@color/somewhat_blue"
            android:textStyle="bold|italic"
            android:layout_marginBottom="3dp"/>

        <View
            android:layout_width="90dp"
            android:layout_height="2dp"
            android:background="@color/somewhat_blue"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

    <!-- Edit Profile Form -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/order_ticket_background"
        android:padding="20dp"
        android:layout_margin="10dp"
        android:layout_marginBottom="30dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Full Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/another_yellow"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:id="@+id/etFullName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="16dp"
                android:textColor="@color/somewhat_blue"
                android:background="@drawable/yellow_input_field_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="15dp"
                android:maxLines="1"/>

            <!-- Email -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/another_yellow"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="16dp"
                android:textColor="@color/somewhat_blue"
                android:background="@drawable/yellow_input_field_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:inputType="textEmailAddress"
                android:layout_marginBottom="15dp"
                android:maxLines="1"/>

            <!-- Number -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/another_yellow"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:id="@+id/etNumber"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="16dp"
                android:textColor="@color/somewhat_blue"
                android:background="@drawable/yellow_input_field_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:inputType="phone"
                android:layout_marginBottom="15dp"
                android:maxLines="1"/>

            <!-- Password -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password (leave blank to keep current)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/another_yellow"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="16dp"
                android:textColor="@color/somewhat_blue"
                android:background="@drawable/yellow_input_field_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:inputType="textPassword"
                android:layout_marginBottom="15dp"
                android:maxLines="1"/>

            <!-- Confirm Password -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm Password"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/another_yellow"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:id="@+id/etConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="16dp"
                android:textColor="@color/somewhat_blue"
                android:background="@drawable/yellow_input_field_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:inputType="textPassword"
                android:layout_marginBottom="30dp"
                android:maxLines="1"/>

            <!-- Save Profile Button -->
            <Button
                android:id="@+id/btnSaveProfile"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:text="Save Profile"
                android:textSize="16sp"
                android:textColor="@color/somewhat_blue"
                android:background="@drawable/button_background2"
                android:layout_marginBottom="15dp" />

            <!-- Cancel Button -->
            <Button
                android:id="@+id/btnCancel"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:text="Cancel"
                android:textSize="16sp"
                android:textColor="@color/somewhat_blue"
                android:background="@drawable/button_background2"
                android:layout_marginBottom="15dp" />

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <include
        layout="@layout/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>